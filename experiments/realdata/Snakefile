rule plot_samples_len:
    input:
        fq1 = pjoin(root, f"{samples[1]}.fq"),
        fq2 = pjoin(root, f"{samples[0]}.fq")
    output:
        pjoin(root, "samples.len.png")
    threads: 1
    shell:
        """
        python3 scripts/plot.py lsamples {input.fq1} {input.fq2} {output}
        """

rule get_stats:
    input:
        pjoin(root, pp, f"{sspecific_prefix}.fq"),
        pjoin(root, step1, f"{sspecific_prefix}.cleared.{samples[0]}.sam"),
        pjoin(root, step1, f"{sspecific_prefix}.cleared.{samples[1]}.sam"),
        pjoin(root, step2, f"{sspecific_prefix}.cleared.{samples[1]}.sam"),
        pjoin(root, step2, "uncovering", f"sspecific.{samples[1]}.sam"),
        pjoin(root, step2, "uncovering", f"sspecific.{samples[0]}.sam")
    output:
        pjoin(root, "stats.txt")
    params:
        root
    threads: 1
    shell:
        """
        pushd scripts &> /dev/null
        bash get_stats.sh {params} > {output}
        popd &> /dev/null
        """

### minimap2 analysis ###
rule filter_long:
    input:
        pjoin(root, pp, "sspecific.fq")
    output:
        pjoin(root, pp, f"{sspecific_prefix_long}.fq")
    params:
        ab = min_ab,
        l = max_l
    threads: 1
    shell:
        """
        ./scripts/filter La {input} {params.ab} {params.l} > {output}
        """

rule minimap2_contigs:
    input:
        ref = pjoin(root, "{sample}_assembly.fa"),
        fq = pjoin(root, pp, f"{sspecific_prefix_long}.fq")
    output:
        sam = pjoin(root, mm2, "{sample}.contigs.sam")
    threads: thrs
    log:
        time = pjoin(root, mm2, "{sample}.contigs.time"),
        out = pjoin(root, mm2, "{sample}.contigs.log")
    shell:
        """
        /usr/bin/time -vo {log.time} minimap2 --split-prefix 1 -t {threads} -ax asm20 {input.ref} {input.fq} > {output.sam} 2> {log.out}
        """
rule minimap2_contigs_plot:
    input:
        sam1 = pjoin(root, mm2, f"{samples[1]}.contigs.sam"),
        sam2 = pjoin(root, mm2, f"{samples[0]}.contigs.sam"),
        fq = pjoin(root, pp, f"{sspecific_prefix_long}.fq")
    output:
        png = pjoin(root, mm2, "contigs_analysis.png")
    threads: 1
    shell:
        """
        python3 ./scripts/plot.py albyerr {input.sam1} {input.sam2} {input.fq} {output.png}
        """

rule minimap2_haplo:
    input:
        ref = pjoin(root, f"{samples[1]}_haplotypes.fa"),
        fq = pjoin(root, pp, f"{sspecific_prefix_long}.fq")
    output:
        sam = pjoin(root, mm2, f"{samples[1]}.haplo.sam")
    threads: thrs
    log:
        time = pjoin(root, mm2, f"{samples[1]}.haplo.time"),
        out = pjoin(root, mm2, f"{samples[1]}.haplo.log")
    shell:
        """
        /usr/bin/time -vo {log.time} minimap2 --split-prefix 1 -t {threads} -ax asm20 {input.ref} {input.fq} > {output.sam} 2> {log.out}
        """

rule minimap2_intersect_beds_for_recall:
    input:
        aligns = pjoin(root, mm2, f"{samples[1]}.haplo.sam.bed"),
        vars1 = pjoin(root, step2, f"{samples[1]}_uniquevars_1.bed"),
        vars2 = pjoin(root, step2, f"{samples[1]}_uniquevars_2.bed")
    output:
        bed1 = pjoin(root, mm2, "bedintersect", "uniquevars1_vs_sam.c.bed"),
        bed2 = pjoin(root, mm2, "bedintersect", "uniquevars2_vs_sam.c.bed")
    threads: 1
    shell:
        """
        bedtools intersect -c -a {input.vars1} -b {input.aligns} > {output.bed1}
        bedtools intersect -c -a {input.vars2} -b {input.aligns} > {output.bed2}
        """

rule minimap2_intersect_beds_for_precision:
    input:
        aligns = pjoin(root, mm2, f"{samples[1]}.haplo.sam.bed"),
        vars1 = known_vars + "_1.bed",
        vars2 = known_vars + "_2.bed"
    output:
        bed1 = pjoin(root, mm2, "bedintersect", "sam_vs_allvars1.wao.bed"),
        bed2 = pjoin(root, mm2, "bedintersect", "sam_vs_allvars2.wao.bed")
    threads: 1
    shell:
        """
        bedtools intersect -wao -a {input.aligns} -b {input.vars1} > {output.bed1}
        bedtools intersect -wao -a {input.aligns} -b {input.vars2} > {output.bed2}
        """

rule minimap2_analyze_step2:
    input:
        fq = pjoin(root, pp, f"{sspecific_prefix_long}.fq"),
        vcf = known_vars,
        bed_rec1 = pjoin(root, mm2, "bedintersect", "uniquevars1_vs_sam.c.bed"),
        bed_rec2 = pjoin(root, mm2, "bedintersect", "uniquevars2_vs_sam.c.bed"),
        bed_pre1 = pjoin(root, mm2, "bedintersect", "sam_vs_allvars1.wao.bed"),
        bed_pre2 = pjoin(root, mm2, "bedintersect", "sam_vs_allvars2.wao.bed")
        # bed_regions = pjoin(root, mm2, "uncovering", "sspecific_intersect_regions.bed")
    output:
        rec = pjoin(root, mm2, "recall.csv"),
        pre = pjoin(root, mm2, "Hprecision.csv")
    params:
        lvalue = 250
    threads: 1
    shell:
        """
        touch .tmp..
        python3 scripts/analyze.py rec {input.bed_rec1} {input.bed_rec2} {params.lvalue} > {output.rec}
        python3 scripts/analyze.py pre {input.fq} {input.vcf} {input.bed_pre1} {input.bed_pre2} .tmp.. > {output.pre}
        rm .tmp..
        """

rule minimap2_extract_uncovering:
    input:
        vcf = known_vars,
        bed_pre1 = pjoin(root, mm2, "bedintersect", "sam_vs_allvars1.wao.bed"),
        bed_pre2 = pjoin(root, mm2, "bedintersect", "sam_vs_allvars2.wao.bed"),
    output:
        txt = pjoin(root, mm2, "uncovering", "sspecific.txt")
    threads: 1
    shell:
        """
        python3 scripts/analyze.py exunc {input.vcf} {input.bed_pre1} {input.bed_pre2} > {output.txt}
        """

