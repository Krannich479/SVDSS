# bbmap + minimap2
rule combine_sams:
    input:
        bb_sam = pjoin(root, step2, f"{sspecific_prefix}.cleared.{samples[1]}.sam"),
        mm2_sam = pjoin(root, mm2, f"{samples[1]}.haplo.sam")
    output:
        sam = pjoin(root, mm2, f"{samples[1]}.haplo.combined.sam")
    shell:
        """
        samtools view -HS {input.bb_sam} > {output.sam}
        samtools view -HS {input.mm2_sam} | grep '^@PG' >> {output.sam}
        samtools view -S {input.bb_sam} >> {output.sam}
        samtools view -S {input.mm2_sam} >> {output.sam}
        """

rule intersect_beds_for_recall_combined:
    input:
        aligns = pjoin(root, mm2, f"{samples[1]}.haplo.combined.sam.bed"),
        vars1 = pjoin(root, step2, f"{samples[1]}_uniquevars_1.bed"),
        vars2 = pjoin(root, step2, f"{samples[1]}_uniquevars_2.bed")
    output:
        bed1 = pjoin(root, mm2, "bedintersect_combined", "uniquevars1_vs_sam.c.bed"),
        bed2 = pjoin(root, mm2, "bedintersect_combined", "uniquevars2_vs_sam.c.bed")
    threads: 1
    shell:
        """
        bedtools intersect -c -a {input.vars1} -b {input.aligns} > {output.bed1}
        bedtools intersect -c -a {input.vars2} -b {input.aligns} > {output.bed2}
        """

rule intersect_beds_for_precision_combined:
    input:
        aligns = pjoin(root, mm2, f"{samples[1]}.haplo.combined.sam.bed"),
        vars1 = known_vars + "_1.bed",
        vars2 = known_vars + "_2.bed"
    output:
        bed1 = pjoin(root, mm2, "bedintersect_combined", "sam_vs_allvars1.wao.bed"),
        bed2 = pjoin(root, mm2, "bedintersect_combined", "sam_vs_allvars2.wao.bed")
    threads: 1
    shell:
        """
        bedtools intersect -wao -a {input.aligns} -b {input.vars1} > {output.bed1}
        bedtools intersect -wao -a {input.aligns} -b {input.vars2} > {output.bed2}
        """

rule analyze_step2_combined:
    # TODO split in multiple rules
    input:
        fq1 = pjoin(root, pp, f"{sspecific_prefix}.fq"),
        fq2 = pjoin(root, pp, f"{sspecific_prefix_long}.fq"),
        vcf = known_vars,
        bed_rec1 = pjoin(root, mm2, "bedintersect_combined", "uniquevars1_vs_sam.c.bed"),
        bed_rec2 = pjoin(root, mm2, "bedintersect_combined", "uniquevars2_vs_sam.c.bed"),
        bed_pre1 = pjoin(root, mm2, "bedintersect_combined", "sam_vs_allvars1.wao.bed"),
        bed_pre2 = pjoin(root, mm2, "bedintersect_combined", "sam_vs_allvars2.wao.bed")
    output:
        rec = pjoin(root, mm2, "recall.combined.csv"),
        pre = pjoin(root, mm2, "Hprecision.combined.csv")
    params:
        fq = temp(pjoin(root, pp, "combined.fq")),
        lvalue = 250
    threads: 1
    shell:
        """
        cat {input.fq1} {input.fq2} > {params.fq}
        touch .tmp..
        python3 scripts/analyze.py rec {input.bed_rec1} {input.bed_rec2} {params.lvalue} > {output.rec}
        python3 scripts/analyze.py pre {params.fq} {input.vcf} {input.bed_pre1} {input.bed_pre2} .tmp.. > {output.pre}
        rm .tmp..
        """
