rule faindex:
    input:
        "{fpath}.fa"
    output:
        "{fpath}.fa.fai"
    threads: 1
    shell:
        """
        samtools faidx {input}
        """

rule fa2fq:
    input:
        "{fpath}.fa"
    output:
        "{fpath}.fq"
    threads: 1
    shell:
        """
        reformat.sh in={input} out={output} qfake=93
        """

